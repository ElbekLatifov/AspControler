@model User
<div class="salom">
  <h1 style="text-align: center; color: rgb(26, 221, 26);">Profile</h1>
<div style="display: flex;">
    <button type="button" class="btn btn-primary position-relative" style="width: 20%; margin-right: 5%; margin-left: 75%;">
      Notifications
      <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
      10+
      <span class="visually-hidden">unread messages</span>
    </span>
  </button>
</div>

@{
    <div style="width: 100%; display: flex;">
        <img style="width: 300px; height: 300px; display: inline-block; margin-right: 30px; margin-bottom:30px; border-radius: 100%" src="@Model.UserPhoto">
        <div style="width: 50%; margin: 100px; margin-top: 30px">
            <h1 style="color: black; font-size: 80px">@Model.UserName</h1>
            <h6 style="color: aqua">Number : @Model.Phone</h6>
            <h6 style="color: aqua">Email : @Model.Email</h6>
        </div>
        
    </div>
    
}
<div style="display: flex; width: 30 %; margin-left: 60%; margin-right: 10%">
<button  class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal" 
type="button" style="width: 40%; margin-left:40%; margin-right: 5px"><=LOGOUT</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel" style="text-align: center">Diqqat</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Haqiqatan ham chiqishni xoxlaysizmi? Accountingiz o'chiriladi!
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <form  asp-controller="Users" asp-action="LogOut">
          <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Sign Out</button>
        </form>
      </div>
    </div>
  </div>
</div>

<form asp-controller="Users" asp-action="Check" >  
    <input  class="btn btn-success" type="submit" value="Update" style="width: 120%; margin-right: 10px">
</form>
</div>
</div>
